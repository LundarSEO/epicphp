<?php
//Используя цикл, выведите табличку календаря на один месяц. Пусть месяц начинается с понедельника и содержит 31 день.

//Кодировочка
mb_internal_encoding("UTF-8");



// создать циклы и вывеси результат

echo "<table>

<tr>

<td>пн</td>

<td>вт</td>

<td>ср</td>

<td>чт</td>

<td>пт</td>

<td>сб</td>

<td>вс</td>

</tr><tr>";

for ($x=1; $x<8; $x++) {


echo "<td>$x</td>";

}

echo "</tr><tr>";

for ($x=8; $x<15; $x++) {


echo "<td>$x</td>";

}

echo "</tr><tr>";

for ($x=15; $x<22; $x++) {


echo "<td>$x</td>";

}

echo "</tr><tr>";

for ($x=22; $x<29; $x++) {


echo "<td>$x</td>";

}

echo "</tr><tr>";

for ($x=29; $x<32; $x++) {


echo "<td>$x</td>";

}

echo "</tr></table>";
